@using TKPM.Models
@model IEnumerable<DaiLy>
@{
    ViewData["Title"] = "Danh sach dai ly";
}



<div class="main-container">
    <div class="pd-ltr-20 xs-pd-20-10">
        <div class="min-height-200px">
            <div class="page-header">

                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        <div class="title">
                            <h4>Basic Tables</h4>
                        </div>
                        <nav aria-label="breadcrumb" role="navigation">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Basic Tables</li>
                            </ol>
                        </nav>
                    </div>
                    <div class="col-md-6 col-sm-12 text-right">
                        <div class="dropdown">
                            <a class="btn btn-primary dropdown-toggle" href="#" role="button" data-toggle="dropdown">
                                January 2018
                            </a>
                            <div class="dropdown-menu dropdown-menu-right">
                                <a class="dropdown-item" href="#">Export List</a>
                                <a class="dropdown-item" href="#">Policies</a>
                                <a class="dropdown-item" href="#">View Assets</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- basic table  Start -->
            <div class="pd-20 card-box mb-30">
                <div class="clearfix mb-20">
                    <div class="pull-left">
                        <h4 class="text-blue h4">Danh sach dai ly</h4>
                        <p>Add class <code>.table</code></p>
                    </div>
                    <div class="pull-right">
                        <a asp-area="" asp-controller="DaiLy" asp-action="ThemDaiLy" class="btn btn-primary btn-sm scroll-click"> Them Dai Ly</a>
                    </div>
                </div>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">
                                <a href="@Url.Action("Sort", new {sortOrder = ViewBag.MaSortParm, type = 2})">
                                    Mã đại lý
                                    <i class="fa-solid fa-sort"></i>
                                </a>
                            </th>
                            <th scope="col">
                                <a href="@Url.Action("Sort", new {sortOrder = ViewBag.TenSortParm, type = 2})">
                                    Tên đại lý
                                    <i class="fa-solid fa-sort"></i>
                                </a>
                            </th>
                            <th scope="col">Loại</th>
                            <th scope="col">Điện thoại</th>
                            <th scope="col">Địa chỉ</th>
                            <th scope="col">
                                <a href="@Url.Action("Sort", new {sortOrder = ViewBag.QuanSortParm, type = 2})">
                                    Quận
                                    <i class="fa-solid fa-sort"></i>
                                </a>
                            </th>
                            <th scope="col">
                                <a href="@Url.Action("Sort", new {sortOrder = ViewBag.NgaySortParm, type = 2})">
                                    Ngày tiếp nhận
                                    <i class="fa-solid fa-sort"></i>
                                </a>
                            </th>
                            <th scope="col">Email</th>
                            <th scope="col">Chi tiết</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var obj in Model)
                        {
                            <tr>
                            <th>@obj.Id</th>
                            <td>@obj.TenDaiLy</td>
                            <td>@obj.LoaiDaiLy</td>
                            <td>@obj.DienThoaiDaiLy</td>
                            <td>@obj.DiaChiDaiLy</td>
                            <td>@obj.QuanDaiLy</td>
                            <td>@obj.NgayTiepNhan</td>
                            <td>@obj.EmailDaiLy</td>
                            <td>
                                <a asp-area="" asp-controller="DaiLy" asp-action="ChiTietDaiLy" asp-route-Id="@obj.Id" class="btn btn-primary btn-sm scroll-click">Chi Tiết</a>
                            </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- basic table  End -->
        </div>

    </div>
</div>
