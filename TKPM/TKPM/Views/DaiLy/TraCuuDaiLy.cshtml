@using TKPM.Models
@model IEnumerable<DaiLy>
    @{
    ViewData["Title"] = "Danh sach dai ly";
    }



    <div class="main-container">
        <div class="pd-ltr-20 xs-pd-20-10">
            <div class="min-height-200px">
                <!-- basic table  Start -->
                <form method="get" asp-action="TraCuuDaiLy">
                    <div class="pd-20 card-box mb-30">
                        <div class="pull-left">
                            <h4 class="text-blue h4">Tra cứu</h4>
                        </div><br>
                        <div class="form-group row">
                            <label class="col-md-1 col-form-label">Quận</label>
                            <div class="col-sm-12 col-md-10">
                                <select name="district">
                                    <option value="Quận 1">Quận 1</option>
                                    <option value="Quận 2">Quận 2</option>
                                    <option value="Quận 3">Quận 3</option>
                                    <option value="Quận 4">Quận 4</option>
                                    <option value="Quận 5">Quận 5</option>
                                    <option value="Quận 6">Quận 6</option>
                                    <option value="Quận 7">Quận 7</option>
                                    <option value="Quận 8">Quận 8</option>
                                    <option value="Quận 9">Quận 9</option>
                                    <option value="Quận 10">Quận 10</option>
                                    <option value="Quận 11">Quận 11</option>
                                    <option value="Quận 12">Quận 12</option>
                                    <option value="Quận Bình Tân">Quận Bình Tân</option>
                                    <option value="Quận Bình Thạnh">Quận Bình Thạnh</option>
                                    <option value="Quận Gò Vấp">Quận Gò Vấp</option>
                                    <option value="Quận Phú Nhuận">Quận Phú Nhuận</option>
                                    <option value="Quận Tân Bình">Quận Tân Bình</option>
                                    <option value="Quận Tân Phú">Quận Tân Phú</option>
                                    <option value="Quận Bình Chánh">Quận Bình Chánh</option>
                                    <option value="Quận Cần Giờ">Quận Cần Giờ</option>
                                    <option value="Quận Củ Chi">Quận Củ Chi</option>
                                    <option value="">Tất cả các quận</option>
                                </select>
                            </div>
                        </div>
                        <div class="input-group mb-3">
                            <div style="width:300px">
                                <input type="search" class="form-control" aria-label="Username" name="name">
                            </div>
                            <input type="submit" class="btn btn-primary" value="Tìm kiếm"/>
                        </div>
                    </div>
                </form>
                <div class="pd-20 card-box mb-30">
                    <div class="clearfix mb-20">
                        <div class="pull-left">
                            <h4 class="text-blue h4">Danh sách đại lý</h4>
                        </div>
                        <div class="pull-right">
                            <a asp-area="" asp-controller="DaiLy" asp-action="ThemDaiLy" class="btn btn-primary btn-sm scroll-click">Thêm đại lý</a>
                        </div>
                    </div>
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">
                                    <a href="@Url.Action("Sort", new {sortOrder = ViewBag.MaSortParm, type = 2})">
                                        Mã đại lý
                                        <i class="fa-solid fa-sort"></i>
                                    </a>
                                </th>
                                <th scope="col">
                                    <a href="@Url.Action("Sort", new {sortOrder = ViewBag.TenSortParm, type = 2})">
                                        Tên đại lý
                                        <i class="fa-solid fa-sort"></i>
                                    </a>
                                </th>
                                <th scope="col">Loại</th>
                                <th scope="col">Điện thoại</th>
                                <th scope="col">Địa chỉ</th>
                                <th scope="col">
                                    <a href="@Url.Action("Sort", new {sortOrder = ViewBag.QuanSortParm, type = 2})">
                                        Quận
                                        <i class="fa-solid fa-sort"></i>
                                    </a>
                                </th>
                                <th scope="col">
                                    <a href="@Url.Action("Sort", new {sortOrder = ViewBag.NgaySortParm, type = 2})">
                                        Ngày tiếp nhận
                                        <i class="fa-solid fa-sort"></i>
                                    </a>
                                </th>
                                <th scope="col">Email</th>
                                <th scope="col">Chi tiết</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var obj in Model)
                            {
                                <tr>
                                <th>@obj.Id</th>
                                <td>@obj.TenDaiLy</td>
                                <td>@obj.LoaiDaiLy</td>
                                <td>@obj.DienThoaiDaiLy</td>
                                <td>@obj.DiaChiDaiLy</td>
                                <td>@obj.QuanDaiLy</td>
                                <td>@obj.NgayTiepNhan</td>
                                <td>@obj.EmailDaiLy</td>
                                <td>
                                    <a asp-area="" asp-controller="DaiLy" asp-action="ChiTietDaiLy" asp-route-Id="@obj.Id" class="btn btn-primary btn-sm scroll-click">Chi Tiết</a>
                                </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- basic table  End -->
            </div>

        </div>
    </div>
