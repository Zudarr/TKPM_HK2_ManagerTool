@using TKPM.Models
@model IEnumerable<HangHoa>

@{
    ViewData["Title"] = "Index";
}

<div class="main-container">
    <div class="pd-ltr-20 xs-pd-20-10">
        <div class="min-height-200px">
            <!-- basic table  Start -->
            <div class="pd-20 card-box mb-30">
                <div class="clearfix mb-20">
                    <div class="pull-left">
                        <h4 class="text-blue h4">Danh sách hàng hóa</h4>
                    </div>
                </div>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">
                                <a href="@Url.Action("Sort", new {sortOrder = ViewBag.MaSortParm})">
                                    ID
                                    <i class="fa-solid fa-sort"></i>
                                </a>
                            </th>
                            <th scope="col">
                                <a href="@Url.Action("Sort", new {sortOrder = ViewBag.TenSortParm})">
                                    Tên hàng
                                    <i class="fa-solid fa-sort"></i>
                                </a>
                            </th>
                            <th scope="col">Đơn vị tính</th>
                            <th scope="col">
                                <a href="@Url.Action("Sort", new {sortOrder = ViewBag.SoLuongSortParm})">
                                    Số lượng trong kho
                                    <i class="fa-solid fa-sort"></i>
                                </a>
                            </th>
                            <th scope="col">
                                <a href="@Url.Action("Sort", new {sortOrder = ViewBag.DonGiaSortParm})">
                                    Đơn giá
                                    <i class="fa-solid fa-sort"></i>
                                </a>
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model) {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.TenHang</td>
                                <td>@item.DonViTinh</td>
                                <td>@item.SoLuongTrongKho</td>
                                <td>@item.DonGia</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm scroll-click">Chỉnh sửa</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- basic table  End -->
        </div>
    </div>
</div>
