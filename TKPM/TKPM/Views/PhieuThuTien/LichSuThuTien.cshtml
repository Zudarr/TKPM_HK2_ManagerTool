@using TKPM.Models
@model IEnumerable<PhieuThuTien>
@{
    ViewData["Title"] = "Lich su phieu thu tien";
}



<div class="main-container">
    <div class="pd-ltr-20 xs-pd-20-10">
        <div class="min-height-200px">
            <!-- basic table  Start -->
            <div class="pd-20 card-box mb-30">
                <div class="clearfix mb-20">
                    <div class="pull-left">
                        <h4 class="text-blue h4">Lịch sử thu tiền</h4>
                    </div>
                    <div class="pull-right">
                        <a asp-area="" asp-controller="PhieuThuTien" asp-action="LapPhieuThuTien" class="btn btn-primary btn-sm scroll-click"> Lập phiếu thu tiền</a>
                    </div>
                </div>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">
                                <a href="@Url.Action("Sort", new {sortOrder = ViewBag.MaPhieuSortParm})">
                                    Mã phiếu
                                    <i class="fa-solid fa-sort"></i>
                                </a>
                            </th>
                            <th scope="col">
                                Tên đại lý
                            </th>
                            <th scope="col">
                                <a href="@Url.Action("Sort", new {sortOrder = ViewBag.NgaySortParm})">
                                    Ngày thu tiền
                                    <i class="fa-solid fa-sort"></i>
                                </a>
                            </th>
                            <th scope="col">
                                <a href="@Url.Action("Sort", new {sortOrder = ViewBag.NguoiSortParm})">
                                    Người thu tiền
                                    <i class="fa-solid fa-sort"></i>
                                </a>
                            </th>
                            <th scope="col">
                                <a href="@Url.Action("Sort", new {sortOrder = ViewBag.TienSortParm})">
                                    Số tiền thu
                                    <i class="fa-solid fa-sort"></i>
                                </a>
                            </th>
                            <th>
                                Chi tiết
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var obj in Model)
                        {
                            <tr>
                            <th>@obj.Id</th>
                            <td>@obj.DaiLy.TenDaiLy</td>
                            <td>@obj.NgayThuTien</td>
                            <td>@obj.IdNguoiThuTien</td>
                            <td>@obj.SoTienThu</td>
                            <td>
                                <a asp-area="" asp-controller="PhieuThuTien" asp-action="ChiTietThuTien" asp-route-Id="@obj.Id" class="btn btn-primary btn-sm scroll-click">Chi Tiết</a>
                            </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
            <!-- basic table  End -->
        </div>

    </div>
</div>
